<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/arriere"
    tools:context=".Prog.ProgramActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Vos programmes"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#009688"></TextView>

    <ListView
        android:id="@+id/list_prog"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:isScrollContainer="true"
        android:paddingTop="20dp"></ListView>

    <Button
        android:id="@+id/btnajouter"
        android:layout_width="81dp"
        android:layout_height="86dp"
        android:layout_gravity="right"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ajoutt" />

</LinearLayout>
